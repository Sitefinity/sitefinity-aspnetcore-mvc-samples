@using Progress.Sitefinity.AspNetCore.Widgets.Models.Recommendations
@model RecommendationsViewModel

<environment include="Development">
    <script src="scripts/bootstrap.bundle.js" section-name="Top"></script>
    <script src="scripts/recommendations.js" section-name="Bottom" assembly-ref="Progress.Sitefinity.AspNetCore.Widgets"></script>
</environment>
<environment exclude="Development">
    <script src="scripts/bootstrap.bundle.min.js" section-name="Top"></script>
    <script src="scripts/recommendations.min.js" section-name="Bottom" assembly-ref="Progress.Sitefinity.AspNetCore.Widgets"></script>
</environment>

<div id="recommendations-wrapper-@Model.UniqueId" class="@Model.CssClass" hidden @Html.BuildAttributes(@Model.Attributes, "ContentRecommendations")>
    <h4>@Model.Header</h4>
    <div class="content-recommendations"></div>
</div>

<div class="recommendations-metadata">
    <input class="unique-id" type="hidden" value="@Model.UniqueId" />
    <input class="web-service-path" type="hidden" value="@Model.WebServicePath" />
    <input class="conversion-id" type="hidden" value="@Model.ConversionId" />
    <input class="max-number-of-items" type="hidden" value="@Model.MaxNumberOfItems" />
    <input class="site-id" type="hidden" value="@Model.SiteId" />
</div>
