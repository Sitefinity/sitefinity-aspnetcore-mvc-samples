<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Models\" />
    <Folder Include="ViewComponents\" />
    <Folder Include="Views\Shared\" />
    <Folder Include="wwwroot\js\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Progress.Sitefinity.AspNetCore" Version="14.2.7900.145" />
    <PackageReference Include="Progress.Sitefinity.AspNetCore.Widgets" Version="14.2.7900.145" />
    <PackageReference Include="Progress.Sitefinity.AspNetCore.FormWidgets" Version="14.2.7900.145" />
    <PackageReference Include="Progress.Sitefinity.Renderer" Version="14.2.7900.145" />
    <PackageReference Include="Progress.Sitefinity.RestSdk" Version="14.2.7900.145" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="wwwroot\**">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </EmbeddedResource>
  </ItemGroup>
  <PropertyGroup Condition=" '$(RunConfiguration)' == 'WebApp' " />
</Project>
