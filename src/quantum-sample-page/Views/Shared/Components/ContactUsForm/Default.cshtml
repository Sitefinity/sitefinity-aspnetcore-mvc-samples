@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Renderer.Models.ContactUsForm.ContactUsFormModel

@using (Html.BeginForm("Index", "FormValues", FormMethod.Post, new { id = "submitForm", novalidate = "", @class = "qu-form -gray" }))
{
    <h3 class="qu-heading-medium">@Model.Heading</h3>
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input class="form-control" asp-for="FirstName" required>
        <div class="invalid-feedback">
            Field is required
        </div>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input class="form-control" asp-for="LastName" required>
        <div class="invalid-feedback">
            Field is required
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input type="email" class="form-control" asp-for="Email" required>
        <div class="invalid-feedback">
            Field is required
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input type="number" class="form-control" asp-for="PhoneNumber" required>
        <div class="invalid-feedback">
            Field is required
        </div>
    </div>    
    <div class="form-group">
        <label asp-for="YourMessage">Your Message</label>
        <textarea class="form-control" asp-for="YourMessage" placeholder="Tell us more about your project"></textarea>
    </div>
    <button class="btn w-100" id="submitButton" type="submit">Submit</button>
}

